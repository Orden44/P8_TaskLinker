{% extends 'base.html.twig' %}

{% block title %}{{ employee.fullname }} - {{ parent() }}{% endblock %}

{% block body %}
    {% include 'header.html.twig' with {'active': 'team'} %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>{{ employee.fullname }}</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(form) }}
                <div>{{ form_row(form.lastName) }}</div>
                <div>{{ form_row(form.firstName) }}</div>
                <div>{{ form_row(form.email) }}</div>
                <div class="form-flex">
                    <div>{{ form_row(form.arrivalDate) }}</div>
                    <div>{{ form_row(form.status) }}</div>
                </div>
                <button class="button button-submit">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}

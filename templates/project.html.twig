{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <div class="flex-header">
                    <h1>{{ project.name }}</h1>
                    <div class="user-list">
						{% for employee in employees %}
							<div class="avatar">{{ employee.getAvatar }}</div>
						{% endfor %}
                    </div>                    
                    <a class="button" href="{{ path('app_project_edit', {id: project.id}) }}">Modifier</a>
                </div>
            </div>
        </header>
        <div id="content">
            <div id="tasks-container">
                {% for status in statuses %}
                    <div class="task-column">
                        <h2>{{ status.label }}</h2>
                        <div class="tasks-list">
                            {% for task in status.tasks %}
                                {% if task.project.id == project.id %}
                                    <a class="task" href="{{ path('app_task', {id: task.id}) }}">
                                        <h3>{{ task.title }}</h3>
                                        <p>{{ task.description }}</p>
                                        <div class="task-infos">
                                            {% if task.deadline %}
                                                <div class="task-deadline">
                                                    <i class="fa-regular fa-calendar"></i>
                                                    {{ task.deadline|date("d/m/Y") }}
                                                </div>
                                            {% endif %}
                                            {% if task.employees %}

                                                {# {% for employee in employees %}
                                                    <div class="mini-user">
                                                        {{ task.employee.getAvatar }}
                                                    </div>
                                                {% endfor %} #}

                                                <div class="mini-user">
                                                    {# {{ task.employees.getAvatar }} #}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </a>
                                {% endif %}
                            {% endfor %}
                            <a href="{{ path("app_task_add", {id: project.id}) }}" class="task-add">
                                + Ajouter une t√¢che
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une tâche - {{ parent() }}{% endblock %}

{% block body %}
    {% include 'header.html.twig' with {'active': 'project'} %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Créer une tâche</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(form) }}
                <div>{{ form_row(form.title) }}</div>
                <div>{{ form_row(form.description) }}</div>
                <div>{{ form_row(form.deadline) }}</div>
                <div>{{ form_row(form.status) }}</div>
                <div>{{ form_row(form.employees) }}</div>
                <div>{{ form_row(form.project) }}</div>
                <br>
                <button class="button button-submit">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
